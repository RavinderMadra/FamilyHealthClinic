@*@model PagedList.IPagedList<DemoModel.ViewModel.UnAvailableViewModel>
@using PagedList.Mvc*@

@{
    Layout = null;
}

<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>FROM DATE</th>
            <th>TO DATE</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.UnAvailableViewModel entity in Model)
        {
            <tr>
                <td>@entity.Id </td>
                <td>@String.Format("{0:dd/MM/yyyy}", entity.FromDate) </td>
                <td>@String.Format("{0:dd/MM/yyyy}", entity.ToDate) </td>
                <td>
                    <a class="btn btn-outline-info btn-xs linkbutton"
                       href="@Url.Action("AddUnAvailableDate", "Admin",new {Id=entity.Id })" name="edit">
                        <i class="fa fa-edit"></i> Edit
                    </a> &nbsp;
                    <a class="btn btn-outline-info btn-xs linkbutton"
                       onclick="return Delete(' + @entity.Id + ')" name="delete">
                        <i class="fa fa-edit"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>

</table>
<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>

