@model PagedList.IPagedList<DemoModel.ViewModel.AppointmentViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}


<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="width: 5%;">Appointment Id</th>
            <th>Patient Name</th>
            <th>Patient Phone</th>
            <th>Problem</th>
            <th>Appointment Date</th>
            <th>Appointment Time</th>
            <th>Patient Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.AppointmentViewModel entity in Model)
        {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.Name</td>
            <td>@entity.Phone</td>
            <td>@entity.Problem</td>
            <td>@String.Format("{0:dd/MM/yyyy}", entity.AppointmentDate)</td>
            <td>@entity.AppointmentTimeName</td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">
                    View Patient
                </button>
                @*<a class="btn btn-outline-info btn-xs linkbutton"
            href="@Url.Action("PatientDetail", "Admin"
                 ,new {data=entity.PatientId})" name="view">View</a>&nbsp;*@
            </td>
        </tr>
        }
    </tbody>
    <tfoot>  </tfoot>

</table>
<div class="modal about-modal w3-agileits fade" id="myModal2" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>
