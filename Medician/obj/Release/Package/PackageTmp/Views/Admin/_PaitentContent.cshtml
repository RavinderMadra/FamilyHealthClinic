@model PagedList.IPagedList<DemoModel.ViewModel.AppointmentViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}


<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>PatientId</th>
            <th>Patient Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            @*  <th>Action</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.AppointmentViewModel entity in Model)
        {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.Name</td>
            <td>@String.Format("{0:dd/MM/yyyy}", entity.DateOfBirth)</td>
           
            <td>
                @{
                    switch (entity.Gender)
                    {
                        case 1:
                            // Use the text block below to separate html elements from code
                            <text>
                               Male
                            </text>
                            break;  // Always break each case
                        case 2:
                            <text>
                                Female
                            </text>
                            break;
                        default:
                            <text>
                                
                            </text>
                            break;
                    }
                }
            </td>
            <td>@entity.Address</td>
            <td>@entity.Email</td>
            <td>@entity.Phone</td>

            @*<td>
            <a class="btn btn-outline-info btn-xs linkbutton"
               href="@Url.Action("AddWebsiteContent", "Admin"
                ,new {data=entity.Id})" name="edit"><i class="fa fa-edit"></i> Edit</a>&nbsp;

        </td>*@

        </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>

</table>

<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>