@model IEnumerable<DemoModel.ViewModel.UnAvailableViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; ;
}
<link href="~/AdminAsset/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<script src="~/Scripts/jquery-1.10.2.js"></script>
<div class="page-wrapper">
    <!-- Bread crumb and right sidebar toggle -->
     <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">UnAvailableDate List</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- End Bread crumb and right sidebar toggle -->
        <!-- Container fluid  -->
    
    <div class="container-fluid">        
        <!-- Start Page Content -->  
        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <div class="table-responsive">

                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>FROM DATE</th>
                                        <th>TO DATE</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DemoModel.ViewModel.UnAvailableViewModel entity in Model)
                                    {
                                        <tr>
                                            <td>@entity.Id </td>
                                            <td>@String.Format("{0:dd/MM/yyyy}",entity.FromDate) </td>
                                            <td>@String.Format("{0:dd/MM/yyyy}", entity.ToDate) </td>
                                            <td>
                                                <a class="btn btn-outline-info btn-xs linkbutton"
                                                   href="#" onclick="return getbyID(' + @entity.Id + ')" name="edit">
                                                    <i class="fa fa-edit"></i> Edit
                                                </a> &nbsp;
                                                <a class="btn btn-outline-info btn-xs linkbutton"
                                                   href="#" onclick="return Delete(' + @entity.Id + ')" name="delete">
                                                    <i class="fa fa-edit"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>

                                </tfoot>

                            </table>
                        </div>
                        @*<div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                            </div>
                            
                        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
                            <div class="pagination-margin  paginate_button page-item ">
                                @Html.PagedListPager(Model, page => Url.Action("ManagePaitent", new { page, pageSize = ViewBag.PageSize }))
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>        
        <!-- End PAge Content -->
        
    </div>    
    <!-- End Container fluid  -->    
    
    <!-- footer -->    
    <footer class="footer text-center">
        All Rights Reserved by FamilyHealthClinic. Designed and Developed by <a href="#">RavinderMadra</a>.
    </footer>    
    <!-- End footer -->
    
</div>
<script src="~/AdminAsset/assets/extra-libs/DataTables/datatables.min.js"></script>
<script src="~/Assets/js/jquery-2.1.4.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>
<script type="text/javascript">
    function getbyID(ID) {
        debugger;
        $.ajax({
            url: "/Admin/GetbyID/" + ID,
            typr: "GET",
            contentType: "application/json;charset=UTF-8",
            dataType: "json",
            success: function (result) {
                $('#Reason').val(result.Id);
                $('#FromDate').val(result.FromDate);
                $('#ToDate').val(result.ToDate);

                AddUnAvailableDate();

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    }

    function Delete(ID) {
        debugger;
        var ans = confirm("Are you sure you want to delete this Record?");
        if (ans) {
            $.ajax({
                url: "/Admin/Delete/" + ID,
                type: "POST",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    ManageUnAvailableDate();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    }

</script>